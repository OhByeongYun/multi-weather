extends helpers/layout

block link
	link(rel="stylesheet", href="css/index.css")
	script(src="//cdnjs.cloudflare.com/ajax/libs/d3/3.3.11/d3.min.js")
	script(src="js/weather.js")
	
block content
	div.row
		include helpers/sidebar
		
		div#colum.local
			div.row#select
				div.row
					div.span2 
						div.box.active
							span 서울
					div.span2 
						div.box
							span 대전
					div.span2 
						div.box
							span 대구
					div.span2 
						div.box
							span 전주
					div.span2 
						div.box
							span 광주
					div.span2 
						div.box
							span 부산
					div.span2 
						div.box
							span 제주
				div.row
					div.span2 
						div.box
							span 강릉
					div.span2 
						div.box
							span 울릉
					div.span2 
						div.box
							span 독도
			div.container-fluid#local-info
				div.location 
					span.city-ko 서울
					span.city-en Seoul
					span.update-time Thu, 12 Dec 2013 2:00 am KST
				div.row#colum1
					div.span3#weather-now.tempbox
						div.box.h
							div.temp
								span.t -2
								span.v C
							div.c partly cloud
					div.span3#weather-humidity.tempbox
						div.box.h
							div.humi
								span.t 62
								span.p %
							div.text humidity
					div.span3#weather-wind.tempbox
						div.box.h
							div.direction
								span.d 311
								span.u deg
							div.speed
								span.s 2
								span.u km/h
							div.text wind
					div.span5#weather-sun.tempbox
						div.box.h
							div.ab 
							span.rise.s
								div.time 
									span.a 05
									span.n am
								div.t sunrise
							span.set.s
								div.time
									span.a 07
									span.n pm
								div.t sunset
			div.container-fluid#svg-area
				div.title 
					span.t-ko 주간예보
					span.t-en forecast
				svg#forecast
				
